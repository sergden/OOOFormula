@page "{id}"
@model OOOFormula.Pages.Administration.ListRequests.DeleteModel

@{
    ViewData["Title"] = "Удаление";
}

<div class="col-12 mb-2">
    <h3>Вы действительно хотите удалить эту запись?</h3>
    <hr />
</div>

<div class="row">
    <div class="col-12">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Requests.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Requests.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Requests.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Requests.Phone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Requests.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Requests.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Requests.Message)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Requests.Message)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Requests.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Requests.Date)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Requests.Id" />
            <a class="btn btn-success" asp-page="./Index">Отмена</a> |
            <input type="submit" value="Удалить" class="btn btn-danger" />
        </form>
    </div>
</div>

