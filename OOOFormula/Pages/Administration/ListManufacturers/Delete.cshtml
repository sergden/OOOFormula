@page "{id}"
@model OOOFormula.Pages.Administration.ListManufacturers.DeleteModel

@{
    ViewData["Title"] = "Удаление";
}

<div class="col-12 mb-2">
    <h3>Вы действительно хотите удалить эту запись?</h3>
    <hr />
</div>

<div class="row">
    <div class="col-12">
        <dl class="row">
            <dt class="col-sm-2">Название</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Manufacturers.Name)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Manufacturers.Id" />
            <a class="btn btn-success" asp-page="./Index">Отмена</a> |
            <input type="submit" value="Удалить" class="btn btn-danger" />
        </form>
    </div>
</div>
