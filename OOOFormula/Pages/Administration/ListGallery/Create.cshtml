@page
@model OOOFormula.Pages.Administration.ListGallery.CreateModel

@{
    ViewData["Title"] = "Создание";
}

<div class="col-12 mb-2">
    <h1>Создание</h1>
    <hr />
</div>

<div class="col-6">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Gallery.Name" class="control-label">Название</label>
            <input asp-for="Gallery.Name" class="form-control" />
            <span asp-validation-for="Gallery.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gallery.Description" class="control-label">Описание</label>
            <input asp-for="Gallery.Description" class="form-control" />
            <span asp-validation-for="Gallery.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gallery.ImagePath" class="control-label">Фото</label>
            <input asp-for="Gallery.ImagePath" class="form-control" />
            <span asp-validation-for="Gallery.ImagePath" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gallery.DateAdd" class="control-label">Дата добавления</label>
            <input asp-for="Gallery.DateAdd" class="form-control" />
            <span asp-validation-for="Gallery.DateAdd" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a class="btn btn-primary" asp-page="Index">Назад</a> |
            <input type="submit" value="Создать" class="btn btn-success" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
