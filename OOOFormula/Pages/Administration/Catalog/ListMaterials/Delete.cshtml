@page
@model OOOFormula.Pages.Administration.Catalog.ListMaterials.DeleteModel

@{
    ViewData["Title"] = "Удаление";
}

<div class="col-12 mb-2">
    <h3>Вы действительно хотите удалить эту запись?</h3>
    <hr />
</div>

<div class="col-12">
    <dl class="row">
        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Materials.Name)
        </dd>
        <dt class="col-sm-2">Стоимость</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Materials.Price)
        </dd>
        <dt class="col-sm-2">Фото</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Materials.ImagePath)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Materials.Id" />
        <a class="btn btn-success" asp-page="./Index">Отмена</a> |
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
</div>
