@page "{id}"
@model OOOFormula.Pages.Administration.Catalog.ListMaterials.DeleteModel

@{
    ViewData["Title"] = "Удаление";
    string PhotoPath = "~/images/Materials/" + Model.Materials.ImagePath;
}

<div class="col-12 mb-2">
    <h3>Вы действительно хотите удалить эту запись?</h3>
    <div class="text-danger">
        <h5>
            При удалении этой записи будут также удалены зависимые записи из таблицы "Каталог"!
        </h5>
    </div>
    <hr />
</div>

<div class="row">
    <div class="col-12">
        <dl class="row">
            <dt class="col-sm-2">Название</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Materials.Name)
            </dd>
            <dt class="col-sm-2">Стоимость</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Materials.Price)
            </dd>
            <dt class="col-sm-2">Фото</dt>
            <dd class="col-sm-10">
                <a href="@PhotoPath" data-fancybox>
                    <img src="@PhotoPath" asp-append-version="true" width="200" height="150" />
                </a>
                <div class="col-lg-6 mt-2 p-0">
                    @Html.DisplayFor(model => model.Materials.ImagePath)
                </div>
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Materials.Id" />
            <a class="btn btn-success" asp-page="./Index">Отмена</a> |
            <input type="submit" value="Удалить" class="btn btn-danger" />
        </form>
    </div>
</div>

