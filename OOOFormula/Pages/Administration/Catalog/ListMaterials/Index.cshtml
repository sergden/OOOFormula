@page
@model OOOFormula.Pages.Administration.Catalog.ListMaterials.IndexModel

@{
    ViewData["Title"] = "Материалы";
    var prevDisabled = !Model.Materials.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Materials.HasNextPage ? "disabled" : "";
}

<div class="row justify-content-center">
    <div class="col-8 text-center">
        <h1>Материалы</h1>
    </div>
</div>

<!--Вывод сообщения об результате операции из моделей Create и Edit-->
@if (TempData["SuccessMessage"] != null)
{
    <div class="col-12 alert alert-success text-center">
        @TempData["SuccessMessage"]
    </div>
}

<div class="col-12">
    <p>
        <a class="btn btn-primary" asp-page="Create">Добавить новую запись</a>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-route-sortOrder="@ViewBag.NameSort">Название</a>
            </th>
            <th><a asp-route-sortOrder="@ViewBag.PriceSort">Стоимость</a></th>
            <th>
                <a asp-route-sortOrder="@ViewBag.ImageSort">Фото</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Materials)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>
                <td>
                    <div>
                        <a class="mr-2" asp-page="./Details" asp-route-id="@item.Id">
                            <i class="bi bi-binoculars-fill"></i>
                        </a>
                        <a class="mr-2" asp-page="./Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a class="text-danger" asp-page="./Delete" asp-route-id="@item.Id">
                            <i class="bi bi-x-circle-fill"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Materials.PageIndex-1)"
   class="btn btn-primary @prevDisabled">
    Назад
</a>
<a asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Materials.PageIndex+1)"
   class="btn btn-primary @nextDisabled">
    Вперед
</a>
