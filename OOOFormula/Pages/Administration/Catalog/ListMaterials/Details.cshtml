@page "{id}"
@model OOOFormula.Pages.Administration.Catalog.ListMaterials.DetailsModel

@{
    ViewData["Title"] = Model.Materials.Name;
    string ImagePath = "~/images/Materials/" + Model.Materials.ImagePath;
}

<div class="col-12 mb-2">
    <h1>Просмотр записи</h1>
    <hr />
</div>

<div class="col-12">
    <dl class="row">
        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Materials.Name)
        </dd>
        <dt class="col-sm-2">Стоимость</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Materials.Price)
        </dd>
        <dt class="col-sm-2">Фото</dt>
        <dd class="col-sm-10">
            <div class="col-2 p-0">
                <img class="card-img-top border-primary" src="@ImagePath" asp-append-version="true" />
            </div>
        </dd>
    </dl>
</div>
<div class="col-12">
    <a class="btn btn-primary" asp-page="./Index">Назад</a> |
    <a class="btn btn-success" asp-page="./Edit" asp-route-id="@Model.Materials.Id">Изменить</a>
</div>
