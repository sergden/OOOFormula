@page
@model OOOFormula.Pages.Administration.Catalog.ListProducts.CreateModel

@{
    ViewData["Title"] = "Создание";
}

<div class="col-12 mb-2">
    <h1>Создание</h1>
    <hr />
</div>
<div class="row">
    <div class="col-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Products.ImagesName" />

            <div class="form-group">
                <label asp-for="Products.Name" class="control-label">Название</label>
                <input asp-for="Products.Name" class="form-control" />
                <span asp-validation-for="Products.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.Price" class="control-label">Стоимость</label>
                <input asp-for="Products.Price" class="form-control" />
                <span asp-validation-for="Products.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.Description" class="control-label">Описание</label>
                <textarea asp-for="Products.Description" class="form-control"></textarea>
                <span asp-validation-for="Products.Description" class="text-danger"></span>
            </div>

            @* Upload Image *@
            <div class="form-group">
                <label class="control-label">Фото</label>
                <div class="custom-file mt-2 p-0">
                    <input asp-for="Photo" class="form-control" accept="@MIMEType.Types" />
                    @if (TempData["MIMETypeError"] != null)
                    {
                        <span class="text-danger">
                            @TempData["MIMETypeError"]
                        </span>
                    }
                </div>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Products.status" /> Отображать
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Products.CategoryId" class="control-label">Категория</label>
                <select asp-for="Products.CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <!--Добавляем начальный элемент выпадающего списка-->
                    <option value="">Выберите категорию</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Products.MaterialsId" class="control-label">Материал</label>
                <select asp-for="Products.MaterialsId" class="form-control" asp-items="ViewBag.MaterialsId">
                    <option value="">Выберите материал</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Products.ManufacturersId" class="control-label">Производитель</label>
                <select asp-for="Products.ManufacturersId" class="form-control" asp-items="ViewBag.ManufacturersId">
                    <option value="">Выберите производителя</option>
                </select>
            </div>
            <div class="form-group">
                <a class="btn btn-primary" asp-page="Index">Назад</a> |
                <input type="submit" value="Создать" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
