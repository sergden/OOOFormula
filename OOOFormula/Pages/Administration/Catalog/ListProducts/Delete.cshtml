@page "{id}"
@model OOOFormula.Pages.Administration.Catalog.ListProducts.DeleteModel

@{
    ViewData["Title"] = "Удаление";
    string PhotoPath = $"~/images/Products/{Model.Products.Profile.ImagesName ?? "noimage.png"}";
}
<div class="col-12 mb-2">
    <h3>Вы действительно хотите удалить эту запись?</h3>
    <hr />
</div>

<div class="row">
    <div class="col-12">
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Products.Name" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Products.Name)
            </dd>
            <dt class="col-sm-2">
                <label asp-for="Products.Price" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Products.Price)
            </dd>
            <dt class="col-sm-2">
                <label asp-for="Products.Profile.Description" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Products.Profile.Description)
            </dd>
            <dt class="col-sm-2">
                <label asp-for="Products.Profile.ImagesName" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                <a href="@PhotoPath" data-fancybox>
                    <img src="@PhotoPath" asp-append-version="true" width="200" height="150" loading="lazy" />
                </a>
                <div class="col-lg-6 mt-2 p-0">
                    @Html.DisplayFor(model => model.Products.Profile.ImagesName)
                </div>
            </dd>
            <dt class="col-sm-2">Отображать</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Products.Profile.Status)
            </dd>
            <dt class="col-sm-2">
                <label asp-for="Products.CategoryId" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Products.Category.Name)
            </dd>
            <dt class="col-sm-2">
                <label asp-for="Products.FacadeMaterialsId" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Products.FacadeMaterials.Name)
            </dd>
            <dt class="col-sm-2">
                <label asp-for="Products.FurnitureManufacturersId" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Products.FurnitureManufacturers.Name)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Products.Id" />
            <input type="hidden" asp-for="Products.Profile.ImagesName" />
            <a class="btn btn-success" asp-page="./Index">Отмена</a> |
            <input type="submit" value="Удалить" class="btn btn-danger" />
        </form>
    </div>
</div>

