@page
@model OOOFormula.Pages.Administration.ListPages.EditModel

@{
    ViewData["Title"] = "Редактирование";
}

<div class="col-12 mb-2">
    <h1>Редактирование</h1>
    <hr />
</div>

<div class="row">
    <div class="col-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="_Pages.Id" />
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="_Pages.Name" class="control-label"></label>
                    <input asp-for="_Pages.Name" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="_Pages.Title" class="control-label"></label>
                    <input asp-for="_Pages.Title" class="form-control" />
                    <span asp-validation-for="_Pages.Title" class="text-danger"></span>
                </div>
                <div class="form-group mb-0">
                    <label asp-for="_Pages.Body" class="control-label"></label>
                    <span asp-validation-for="_Pages.Body" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <textarea asp-for="_Pages.Body" id="BodyTextArea"></textarea>
            </div>
            <div class="form-group">
                <a class="btn btn-danger" asp-page="./Index">Отмена</a> |
                <input class="btn btn-success" type="submit" value="Сохранить" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener("DOMContentLoaded", function (event) {
            CKEDITOR.replace('BodyTextArea');
        });
    </script>
}
