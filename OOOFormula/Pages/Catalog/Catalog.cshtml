@page  "{handler?}"
@using OOOFormula.Models
@model OOOFormula.Pages.Catalog.CatalogModel
@{
    ViewData["Title"] = "Каталог товаров";
}

<div class="row mt-5">

    <!--Фильтры-->
    <div class="col-md-3">
        <div class="card-header">
            <h3>Фильтры</h3>
        </div>
        <div class="list-group mt-2">
            <form method="get">
                <div class="mb-2">
                    Цена
                    <div class="row">
                        <div class="col col-sm-6">
                            <input class="form-control" placeholder="От" name="PriceFrom" type="number" min="0" step="1" />
                        </div>
                        <div class="col col-sm-6">
                            <input class="form-control" placeholder="До" name="PriceTo" type="number" min="0" step="1" />
                        </div>
                    </div>
                </div>       
                <div class="mb-2">
                    <div class="row">
                        <div class="col col-sm-6 pl-3 pr-0">
                            <a asp-page-handler="Filters" asp-route-sortOrder="@SortState.PriceAsc">По возрастанию</a>
                        </div>
                        <div class="col col-sm-6 ">
                            <a asp-page-handler="Filters" asp-route-sortOrder="@SortState.PriceDesc">По убыванию</a>
                        </div>
                    </div>
                </div>
                <div class="mb-2">
                    Материал
                    <div class="row">
                        <div class="col col-sm-12">
                            @foreach (var item in Model.Materials)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="@item.Id">
                                    <label class="form-check-label" for="@item.Id">@item.Name</label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="row mt-3 justify-content-center">
                    <div class="form-check pl-0">
                        <button type="submit" class="btn btn-primary" asp-page-handler="Filters">Применить</button>
                        <button type="submit" class="btn btn-primary" asp-page-handler="OnGetAsync">Сбросить</button>
                    </div>
                </div>
            </form>
        </div>
    </div>


    <!--Карточки-->
    <div class="col-md-9">
        <div class="row">
            @if (TempData["Message"] != null)
            {
                <div class="col-12 text-center">
                    <h1>
                        @TempData["Message"]
                    </h1>
                </div>
            }
            <!--в цикле-->
            @foreach (var item in Model.Products)
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card-deck">
                        <div class="card m-3">
                            <div class="text-center">
                                <a asp-page="/Catalog/Details" asp-route-id="@item.Id">
                                    <img class="card-img-bottom" src="~/images/Products/@item.ImagesName" asp-append-version="true" />
                                </a>
                            </div>
                            <div class="text-left mt-3">
                                <a class="nav-link text-dark pb-0" asp-page="/Catalog/Details" asp-route-id="@item.Id">
                                    <h6>@item.Name</h6>
                                </a>
                            </div>
                            <div class="text-left mt-3 ml-3">
                                <h5>@item.Price ₽</h5>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
