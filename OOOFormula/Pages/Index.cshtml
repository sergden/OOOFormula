@page
@model IndexModel
@{
    ViewData["Title"] = "Главная";
}

<div class="row justify-content-center">
    <div class="col-6 mt-5 text-center">
        <a class="nav-link text-dark" asp-area="" asp-page="/Gallery_works">
            <h1>Наши работы</h1>
        </a>
    </div>
</div>

<div class="row mt-1">
    @foreach (var item in Model.Gallery)
    {
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card-deck">
                <div class="card m-3">
                    <div class="text-center">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Gallery_works">
                            <h6>@item.Name</h6>
                        </a>
                    </div>
                    <div class="text-center">
                        <a asp-area="" asp-page="/Gallery_works">
                            <img class="card-img-top" src="~/images/Gallery/@item.ImagePath" asp-append-version="true" loading="lazy" width="200" height="200" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="row justify-content-center">
    <div class="col-6 text-center">
        <h1 class="mt-5">Наши услуги</h1>
    </div>
</div>

<div class="row mt-1">
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card-deck">
            <div class="card m-3">
                <div class="text-center">
                    <h6>Замер</h6>
                </div>
                <div class="text-center">
                    <img class="card-img-top" src="~/images/OurServices/dimension.png" asp-append-version="true" width="200" height="200" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card-deck">
            <div class="card m-3">
                <div class="text-center">
                    <h6>Подбор бытовой техники</h6>
                </div>
                <div class="text-center">
                    <img class="card-img-top" src="~/images/OurServices/selection.png" asp-append-version="true" width="200" height="200" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card-deck">
            <div class="card m-3">
                <div class="text-center">
                    <h6>Доставка</h6>
                </div>
                <div class="text-center">
                    <img class="card-img-top" src="~/images/OurServices/delivery.png" asp-append-version="true" loading="lazy" width="200" height="200" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card-deck">
            <div class="card m-3">
                <div class="text-center">
                    <h6>Монтаж</h6>
                </div>
                <div class="text-center">
                    <img class="card-img-top" src="~/images/OurServices/install.png" asp-append-version="true" width="200" height="200" />
                </div>
            </div>
        </div>
    </div>
</div>
