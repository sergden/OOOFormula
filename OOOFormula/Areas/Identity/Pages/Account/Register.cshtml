@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h1 class="mt-2">@ViewData["Title"]</h1>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Создайте новый аккаунт.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <div class="password">
                    <input asp-for="Input.Password" id="password-input" class="form-control" />
                    <a href="#" class="password-control"></a>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <div class="password">
                    <input asp-for="Input.ConfirmPassword" id="password-input-confirm" class="form-control" />
                    <a href="#" class="password-control-confirm"></a>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
